{
  "watch": [
    "."
  ],
  "ignore": [
    "node_modules/**/*",
    "uploads/**/*",
    "logs/**/*",
    "*.log",
    ".git/**/*",
    ".env.example"
  ],
  "ext": "js,json",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000",
  "verbose": true,
  "restartable": "rs",
  "colours": true,
  "legacyWatch": false
}